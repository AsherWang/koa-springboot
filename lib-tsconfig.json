{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es2015",
    "experimentalDecorators": true,
    "removeComments":true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types" : ["node", "koa", "koa-router"],
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "lib/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}